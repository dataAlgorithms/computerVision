>>> from numpy import *
>>> a=array([[1,2],[3,4],[5,6]])
>>> a
array([[1, 2],
       [3, 4],
       [5, 6]])
>>> a.flatten()  # by row
array([1, 2, 3, 4, 5, 6])
>>> a.flatten('F') # by col
array([1, 3, 5, 2, 4, 6])
>>> a.flatten('A') # by row
array([1, 2, 3, 4, 5, 6])
>>> a=mat([[1,2,3],[4,5,6]])
>>> a
matrix([[1, 2, 3],
        [4, 5, 6]])
>>> a.flatten()
matrix([[1, 2, 3, 4, 5, 6]])
>>> y=a.flatten().A  # matrix to array
>>> y
array([[1, 2, 3, 4, 5, 6]])
>>> y[0]
array([1, 2, 3, 4, 5, 6])
